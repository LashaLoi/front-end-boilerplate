{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2015",
            "dom"
        ],
        "checkJs": false,
        "jsx": "react",
        "resolveJsonModule": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "baseUrl": "./",
        "paths": {
            "@app/*": [
                "app/*"
            ],
            "@shared/*": [
                "app/shared/*"
            ],
            "@content/*": [
                "app/content/*"
            ]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true
    },
    "exclude": [
        "node_modules"
    ],
}
